page{
  height: 100%;
}
.scrollView {
  width:100%;
  height:100%;
}

/* 新建投票 */
.addButton {
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center; 
  width:80%;
  height:50%;
}
.addButton::after{
  border: none;
}
.addOuterRectangle {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 80%;
  height: 80%;
  /* border: 1px solid lightgrey; */
}
.createVoteTitle{
  color: lightgrey;
}
.addInnerRectangle {
  /*用于让十字的两条线可以交叉，不然一条线会把另一条挤开*/
  /* position: absolute;  */
  display:flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  height: 70%;
}
.horizontalLine{
  position: absolute; 
  width: 40%;
  height: 1px;
  background: lightgray;
}
.verticalLine{
   position: absolute; 
  width: 1px;
  height: 40%;
  background: lightgray
}

/* 正在投票、往期投票 复用相同的css */ 
.votesContainer {
  margin-top: 40px; 
  margin-bottom: 10px;
  padding-left: 5%;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  width:90%;
}
.votesListContainer{
   width:100%;
} 
.listCell {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 45px;
  background-color: white;
  border-bottom: 1px solid gainsboro;
}
.listCell::after {
  border: none;
}

